    script = "zproto_codec_c"
    package_dir = "../include"
    source_dir = "."
    project_header = "dafka_classes.h"
    export_macro = "DAFKA_EXPORT">

    <message name = "MSG" id="'M'">
        <field name = "content" type = "frame" />
    </message>

    <message name = "RELIABLE" id="'R'">
        <field name = "address" type = "string" />
        <field name = "sequence" type = "number" size = "8" />
        <field name = "content" type = "frame" />
    </message>

    <message name = "ASK" id="'A'">
        <field name = "subject" type = "string" />
        <field name = "begin_offset" type = "number" size="8" />
        <field name = "end_offset" type = "number" size="8" />
        <field name = "address" type = "string" />
    </message>

    <message name = "ANSWER" id = "'W'">
        <field name = "subject" type = "string" />
        <field name = "address" type = "string" />
        <field name = "sequence" type = "number" size = "8" />
        <field name = "content" type = "frame" />
    </message>
